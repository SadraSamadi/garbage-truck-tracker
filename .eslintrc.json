{
	"extends": "eslint:recommended",
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"plugins": [
		"babel"
	],
	// TODO: this version has some bugs with class private methods, update to the next version
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"legacyDecorators": true
		}
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": "warn"
	}
}
